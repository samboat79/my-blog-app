<p id="notice"><%= notice %></p>

<h4><small>RECENT POST</small></h4>

     <hr>

<div class="container-fluid text-left">
  <div class="row content">
    <div class="col-sm-9">
       <% @articles.each do |article| %>
      <div class="col-sm-3"> <a href="<%= article_path(article.id) %>"><%= image_tag article.image, style:"float:left; width: 100%" %></div>
      <div class="col-sm-9">
      <br>
       
        <a href="<%= article_path(article.id) %>"><h2><%= article.title %></h2>
      <h5></h5><span class="glyphicon glyphicon-time"></span> Post By <%= article.user.email %>, <%= article.created_at %> </h5>
      
      <h5><span class="label label-danger"> <%= article.category.name %> </span></h5><br>
      
      <p class="card mb-3 shadow-lg p-3 mb-5 bg-whiter rounded"><%= article.description %></p>
        <% if article.user == current_user%>
        <%= link_to 'Edit', edit_article_path(article), class:"btn btn-primary" %>
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger" %>
       <% end %>
        </div>
<% end %>

    </div>
    <div class="col-sm-3 sidenav">
    </div>
    
  </div>
</div>

